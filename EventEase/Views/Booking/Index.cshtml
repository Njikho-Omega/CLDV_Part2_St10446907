@model IEnumerable<EventEase.Models.Booking>

@{
    ViewData["Title"] = "Booking Information";
}

<h1>Booking Information</h1>

<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Enter search term"/>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Venue</th>
            <th>Event</th>
            <th>Booking Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingId</td>
                <td>@booking.Venue?.VenueName</td>
                <td>@booking.Event?.EventName</td>
                <td>@booking.BookingDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@booking.BookingId">Edit</a>
                    <a asp-action="Details" asp-route-id="@booking.BookingId">Details</a>
                    <a asp-action="Delete" asp-route-id="@booking.BookingId">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>
